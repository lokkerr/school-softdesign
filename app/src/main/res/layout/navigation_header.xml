<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@android:color/holo_blue_dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_nav_header_bg"
        android:scaleType="centerCrop" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/navigation_header_avatar"
        android:layout_width="@dimen/width_navigation_user_avatar"
        android:layout_height="@dimen/height_navigation_user_avatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_normal"
        android:src="@drawable/ic_user_avatar"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="@dimen/border_circle_image" />


    <ImageView
        android:id="@+id/image_view_rating"
        android:layout_width="@dimen/width_navigation_user_rating"
        android:layout_height="@dimen/height_navigation_user_rating"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:layout_marginRight="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_normal"
        android:src="@drawable/ic_circle_64dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_view_rating"
        android:layout_alignEnd="@+id/image_view_rating"
        android:layout_alignLeft="@+id/image_view_rating"
        android:layout_alignRight="@+id/image_view_rating"
        android:layout_alignStart="@+id/image_view_rating"
        android:layout_alignTop="@+id/image_view_rating"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        android:text="56" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginStart="@dimen/spacing_normal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/navigation_header_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"
            android:text="Олег Гордиенко"
            android:textSize="@dimen/text_size_user_fullname" />

        <TextView
            android:id="@+id/navigation_header_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="sans-serif"
            android:text="lokkerr@yandex.ru"
            android:textSize="@dimen/text_size_user_email" />
    </LinearLayout>
</RelativeLayout>